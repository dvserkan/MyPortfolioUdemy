@model List<MyPortfolioUdemy.DAL.Entities.Contact>

<section id="contact" class="s-contact target-section">

	<div class="overlay"></div>
	@foreach (var item in Model)
	{


		<div class="row narrow section-intro">
			<div class="col-full">
				<h3>İletişim</h3>
				<h1>Bana Ulaşın.</h1>

				<p class="lead">@item.Description</p>
			</div>
		</div>

		<div class="row contact__main">
			<div class="col-eight tab-full contact__form">
				<form method="post" action="/Message/CreateMessage">
					<fieldset>

						<div class="form-field">
							<input name="NameSurname" type="text" id="contactName" placeholder="İsim - Soyisim" value="" minlength="2" required="" aria-required="true" class="full-width">
						</div>
						<div class="form-field">
							<input name="Email" type="email" id="contactEmail" placeholder="Mail" value="" required="" aria-required="true" class="full-width">
						</div>
						<div class="form-field">
							<input name="Subject" type="text" id="contactSubject" placeholder="Konu" value="" class="full-width">
						</div>
						<div class="form-field">
							<textarea name="MessageDetail" id="contactMessage" placeholder="Mesaj" rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
						</div>
						<div class="">
							<button class="full-width btn--primary">Gönder</button>
						</div>

					</fieldset>
				</form>

			</div>
			<div class="col-four tab-full contact__infos">
				<h4 class="h06">Telefon</h4>
				<p>
					Tel 1: @item.Phone1<br>
					Tel 2: @item.Phone2<br>
				</p>

				<h4 class="h06">Email</h4>
				<p>
					@item.Email1<br>
					@item.Email2
				</p>

				<h4 class="h06">Adres</h4>
				<p>
					@item.Adress
				</p> 
			</div>

		</div>
	}
</section>