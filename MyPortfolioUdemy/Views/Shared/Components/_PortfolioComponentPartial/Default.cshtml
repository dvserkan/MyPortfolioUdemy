@model List<MyPortfolioUdemy.DAL.Entities.Portfolio>

<section id="works" class="s-works target-section">

	<div class="row narrow section-intro has-bottom-sep">
		<div class="col-full">
			<h3>Portfolyo</h3>
			<h1>Son Projelerime Göz Atabilirsiniz.</h1>

			<p class="lead">Merhabalar, Aşağıda iletmiş olduğum görsellerde kıymetli <br /><a target="_blank" href="https://www.linkedin.com/in/muratyucedag/?originalSubdomain=tr">Murat Yücedağ</a> & <a target="_blank" href="https://www.linkedin.com/in/egunduz/">Erhan Gündüz</a> hocalarımın videolarını izleyerek öğrendiğim teknolojileri uygulayarak geliştirdiğim projelerimi görüntülemektesiniz.</p>
		</div>
	</div>

	<div class="row masonry-wrap">
		<div class="masonry">
			@foreach (var item in Model)
			{
				<div class="masonry__brick" style="margin-left:30px; margin-top:15px;">

					<div class="item-folio">



						<div class="item-folio__thumb">
							<a href="@item.ImageUrl" class="thumb-link" title="The Beetle Car" data-size="1050x700">
								<img src="@item.ImageUrl"
									 srcset="@item.ImageUrl 1x, @item.ImageUrl 2x" alt="">
								<span class="shadow-overlay"></span>
							</a>
						</div>

						<div class="item-folio__text">
							<h3 class="item-folio__title">
								@item.Title
							</h3>
							<p class="item-folio__cat">
								@item.SubTitle
							</p>
						</div>

						<a target="_blank" href="@item.Url" class="item-folio__project-link" title="Github Linki">
							<i class="im im-link"></i>
						</a>

						<div class="item-folio__caption">
							<p>@item.Description</p>
						</div>

					</div> <!-- end item-folio -->

				</div> <!-- end masonry__brick -->
			}
		</div>
	</div> <!-- end masonry -->

</section>