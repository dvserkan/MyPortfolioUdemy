@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Tanım</th>
									<th scope="col">Telefon 1</th>
									<th scope="col">Telefon 2</th>
									<th scope="col">Mail 1</th>
									<th scope="col">Mail 2</th>
									<th scope="col">Adres</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Phone1</td>
										<td>@item.Phone2</td>
										<td>@item.Email1</td>
										<td>@item.Email2</td>
										<td>@item.Adress</td>
										<td>
											<a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger"><i class="la la-trash-o"></i> Sil</a>
										</td>
										<td>
											<a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-success"><i class="la la-pencil"></i> Güncelle</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-primary"><i class="la la-plus-circle"></i> Yeni İletişim Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





