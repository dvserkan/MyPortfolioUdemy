@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim</h4>
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgi Düzenleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input  type="hidden" asp-for="ContactId"/>
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Tanım</label>
							<input rows="4" type="text" asp-for="Description" class="form-control" />
							<br />
							<label>Telefon 1</label>
							<input rows="4" type="text" asp-for="Phone1" class="form-control" />
							<br />
							<label>Telefon 2</label>
							<input rows="4" type="text" asp-for="Phone2" class="form-control" />
							<br />
							<label>Mail 1</label>
							<input rows="4" type="text" asp-for="Email1" class="form-control" />
							<br />
							<label>Mail 2</label>
							<input rows="4" type="text" asp-for="Email2" class="form-control" />
							<br />
							<label>Adres</label>
							<textarea rows="4" type="text" asp-for="Adress" class="form-control"></textarea>
							<br />
							<button class="btn btn-warning">Bilgileri Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


